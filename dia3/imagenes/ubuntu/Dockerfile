#IMAGEN BASE
FROM ubuntu

#COMANDOS A EJECUTAR
RUN apt update
RUN apt install python3 python3-dev -y

#DEFINIR UN DIRECTORIO DE TRABAJO
WORKDIR /app

#COPIAR ARCHIVOS A MI IMAGEN
COPY index.html .

#EJECUTAR UN COMANDO PARA CUANDO SE INICIE EL CONTENEDOR
CMD python3 -m http.server 4000

#EXPONER PUERTO
EXPOSE 4000

